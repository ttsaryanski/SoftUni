<div class="search-form-container">
    <form id="searchForm" class="search-form" method="get">
        <label for="name">Planet Name:</label>
        <input type="text" id="name" name="name" value="{{query.name}}" placeholder="Enter planet name">

        <label for="solarSystem">Solar System:</label>
        <input type="text" id="solarSystem" name="solarSystem" value="{{query.solarSystem}}" placeholder="Enter solar system">

        <button type="submit">Search</button>
    </form>
</div>

<div id="searchResults" class="search-results hidden">
    <h2>Matching Planets:</h2>
    {{#each items}}
    {{>searchItem}}
    {{else}}
    <p class="no-matches">There are no planets found yet!</p>
    {{/each}}
</div>