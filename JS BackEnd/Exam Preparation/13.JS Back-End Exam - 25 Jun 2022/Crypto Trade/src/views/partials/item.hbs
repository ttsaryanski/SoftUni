<div class="coin">
    <div class="coin-img">
        <img src="{{imageUrl}}" alt="{{name}}">
    </div>
    <div class="coin-info">
        <h1>{{name}}</h1>
        <p><span>Price: </span>${{price}}</p>
        <p><span>Payment: </span>{{paymentMethod}}</p>
    </div>

    <a href="/item/{{_id}}/details" class="btn-details">Details</a>
</div>