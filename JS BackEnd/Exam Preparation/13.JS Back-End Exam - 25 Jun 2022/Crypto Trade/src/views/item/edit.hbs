{{#if error}}
<div>
    <div class="errorContainer">
        <p>{{error}}</p>
    </div>
</div>
{{/if}}

<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{item.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{item.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{item.price}}">
            <label>Description:</label>
            <textarea name="description" id="description">{{item.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod">
                <option value="Crypto Wallet" {{#if (eq item.paymentMethod "Crypto Wallet")}}selected{{/if}}>Crypto Wallet</option>
                <option value="Credit Card" {{#if (eq item.paymentMethod "Credit Card")}}selected{{/if}}>Credit Card</option>
                <option value="Debit Card" {{#if (eq item.paymentMethod "Debit Card")}}selected{{/if}}>Debit Card</option>
                <option value="PayPal" {{#if (eq item.paymentMethod "PayPal")}}selected{{/if}}>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>