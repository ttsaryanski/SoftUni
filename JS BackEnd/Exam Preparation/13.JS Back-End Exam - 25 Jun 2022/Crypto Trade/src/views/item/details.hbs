{{#if error}}
<div>
    <div class="errorContainer">
        <p>{{error}}</p>
    </div>
</div>
{{/if}}

<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{item.imageUrl}}" alt="{{item.name}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{item.name}}</h1>
            <h3 id="payment">Payment method: {{item.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{item.price}}</span></p>
            <p id="description">{{item.description}}.</p>
        </div>
        <div class="product-btn">
            {{#if isAuthenticated}}
            {{#if isOwner}}
                <div class="author">
                    <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
                </div>
            {{else}}
            {{#if isLiked}}
                <p class="buy-message">You already bought these crypto coins.</p>
            {{else}}
                <a href="/item/{{item._id}}/like" class="btn-buy">Buy</a>
            {{/if}}
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>