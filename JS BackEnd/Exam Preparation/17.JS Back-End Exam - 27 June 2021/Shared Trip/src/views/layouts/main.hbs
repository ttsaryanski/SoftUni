<html lang="en">

<head>
    <link rel="stylesheet" href="/css/style.css">
    <title>{{title}}</title>
</head>

<body>
    {{#if error}}
    <div class="error">
        <p>{{error}}</p>
    </div>
    {{/if}}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <img class="logo" src="/images/before.png" alt="before-logo">
            <img class="car logo" src="/images/trip-logo.png" alt="trip-logo">
            <img class="logo" src="/images/after.png" alt="after-logo">
            {{!-- <img class="background" src="/images/background.jpg" alt="background"> --}}

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/item/catalog">Shared Trips</a>
                    </li>
                    {{#if isAuthenticated}}
                    <li class="nav-item">
                        <a class="nav-link" href="/item/create">Offer Trip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout as [ {{userEmail}} ]</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Register</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

    <main>
        {{{body}}}
    </main>

    <footer id="sticky-footer" class="bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Shared Trip 2021</p>
        </div>
    </footer>
</body>

</html>