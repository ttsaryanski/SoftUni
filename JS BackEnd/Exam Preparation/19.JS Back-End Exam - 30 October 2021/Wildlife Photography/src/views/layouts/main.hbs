<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>

    <link href="/css/style.css" type="text/css" rel="stylesheet">
</head>

<body>

    <div id="box">
        {{#if error}}
        <div class="error-container">
            <p>{{error}}</p>
        </div>
        {{/if}}
    </div>

    <nav>
        <img src="/img/logo.png" alt="logo">

        <ul class="menu">
            <li><a href="/">Home</a></li>
            <li><a href="/item/catalog">All Posts</a></li>
            {{#if isAuthenticated}}
            <li><a href="/item/create">Create Post</a></li>
            <li><a href="/profile">Posts of {{email}}</a></li>
            <li><a href="/auth/logout">Logout</a></li>
            {{else}}
            <li><a href="/auth/register">Register</a></li>
            <li><a href="/auth/login">Login</a></li>
            {{/if}}
        </ul>
    </nav>

    <main>
        {{{body}}}
    </main>

