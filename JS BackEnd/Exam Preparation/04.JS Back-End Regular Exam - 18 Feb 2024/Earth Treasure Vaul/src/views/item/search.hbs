<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Name</h2>

        <form class="search-wrapper cf" method="get">
            <input id="#search-input" type="text" name="name" value="{{query.name}}" placeholder="Search here..." required />
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#each items}}
                <ul class="card-wrapper">
                    {{>catalogItem}}
                </ul>
            {{else}}
                <div id="no-post">
                    <h2>There are no results found.</h2>
                </div>
            {{/each}}
        </div>
    </section>
</main>