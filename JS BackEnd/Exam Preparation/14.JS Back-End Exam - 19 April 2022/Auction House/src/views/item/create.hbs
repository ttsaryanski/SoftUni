<section id="create-section" class="">

    <h1 class="item">New Auction</h1>

    <div class="item padded align-center">

        <form class="layout left large" method="post">

            <div class="col aligned">
                <label>
                    <span>Title</span>
                    <input type="text" name="title" value="{{item.title}}"></label>
                <label>
                    <span>Category</span>
                    <select name="category">
                        <option value="Real Estate" {{#if (eq item.category "Real Estate")}}selected{{/if}}>Real Estate</option>
                        <option value="Vehicles" {{#if (eq item.category "Vehicles")}}selected{{/if}}>Vehicles</option>
                        <option value="Furniture" {{#if (eq item.category "Furniture")}}selected{{/if}}>Furniture</option>
                        <option value="Electronics" {{#if (eq item.category "Electronics")}}selected{{/if}}>Electronics</option>
                        <option value="Other" {{#if (eq item.category "Other")}}selected{{/if}}>Other</option>
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type="text" name="imageUrl" value="{{item.imageUrl}}"></label>
                <label>
                    <span>Starting price</span>
                    <input type="number" name="price" value="{{item.price}}"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{item.description}}</textarea>
                </label>

                <div class="align-center">
                    <input class="action" type="submit" value="Publish Item">
                </div>
            </div>

        </form>

    </div>

</section>