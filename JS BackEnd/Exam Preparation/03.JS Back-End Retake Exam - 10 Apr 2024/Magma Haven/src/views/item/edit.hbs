<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{item.name}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" value="{{item.location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" value="{{item.elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruptionYear" value="{{item.lastEruptionYear}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{item.imageUrl}}">
            <label>Volcano Type:</label>
            <select id="type" name="type">
                <option value="{{item.type}}">{{item.type}}</option>
                <option value="Supervolcanoes">Supervolcanoes</option>
                <option value="Submarine">Submarine</option>
                <option value="Subglacial">Subglacial</option>
                <option value="Mud">Mud</option>
                <option value="Stratovolcanoes">Stratovolcanoes</option>
                <option value="Shield">Shield</option>
            </select>
            <label>Description:</label>
            <textarea id="description" name="description"
                placeholder="...">{{item.description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>