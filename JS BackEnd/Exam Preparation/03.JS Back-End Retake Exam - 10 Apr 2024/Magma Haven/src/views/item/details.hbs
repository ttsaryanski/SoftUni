<section id="details-info">
    <h1>Details</h1>
    <div class="volcano-image">
        <img src="{{item.imageUrl}}" alt="{{item.name}}">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{item.name}}</h1>
            <h3 id="location">Location: {{item.location}}</h3>
            <p id="type">Volcano Type: {{item.type}}</p>
            <p id="elevation"><span>Elevation: {{item.elevation}}m</span></p>
            <p id="last-eruption">Year of Last Eruption: {{item.lastEruptionYear}}</p>
            <p id="votes">Vote's Count: {{item.usersList.length}}</p>
            <p id="description">{{item.description}}</p>
        </div>
        {{#if isAuthenticated}}
        <div class="product-btn">
            {{#if isOwner}}
                <div class="author">
                    <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
                </div>
            {{else}}
            {{#if isLiked}}
                <p class="vote-message">You've already voted for this volcano!</p>
            {{else}}
                <a href="/item/{{item._id}}/like" class="btn-vote">Vote</a>
            {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>