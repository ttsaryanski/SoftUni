<main id="details">
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section id="details-info">
        <div class="game-image">
            <img src="{{item.imageUrl}}" alt="{{item.name}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{item.name}}</h1>
                <h3 id="platform">Platform: {{item.platform}}</h3>
                <p id="price"><span>Price: ${{item.price}}</span></p>
                <p id="genre"><span>Genre: {{item.genre}}</span></p>
                <p id="description">{{item.description}}</p>
            </div>
            <div class="product-btn">
                {{#if isAuthenticated}}
                {{#if isOwner}}
                    <div class="author">
                        <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                {{#if isLiked}}
                    <p class="buy-message">You have already bought this game</p>
                {{else}}
                    <a href="/item/{{item._id}}/like" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>