<main id="create">
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="post">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#if item}}
                    <option value="{{item.platform}}">{{item.platform}}</option>
                    {{else}}
                    <option value="">-------</option>
                    {{/if}}
                    <option value="PC">PC</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX">XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{item.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="imageUrl" value="{{item.imageUrl}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{item.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{item.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{item.description}}</textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>