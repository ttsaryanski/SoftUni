<section id="details-page">
    <article class="details-gage-title">
        <h1>Details Page</h1>
    </article>
    <article class="details-page-card">

        <article class="details-page-card-image">
            <img src="/img/man.png" alt="details-image">
        </article>

        <article class="details-page-card-content">
            <p>Author: {{owner}}</p>
            <h2>Headline: {{item.headline}}</h2>
            <h3>Company name: {{item.companyName}}</h3>
            <h4>Company description: {{item.companyDescription}}</h4>
            <h5>Location: {{item.location}}</h5>

            <article class="details-page-card-buttons">
                {{#if isAuthenticated}}
                {{#if isOwner}}
                <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                {{#if isLiked}}
                <p class="already-applied">You have already applied!</p>
                {{else}}
                <a href="/item/{{item._id}}/like" class="btn-apply">Apply now!</a>
                <p class="applied-people">Hurry up, {{item.usersList.length}} people have already applied.</p>
                {{/if}}
                {{/if}}
                {{/if}}
            </article>
        </article>

    </article>
</section>

{{#if isAuthenticated}}
{{#if isOwner}}
{{#if item.usersList}}
<section id="info-about-candidates">
    <h2>Candidates for this ad:</h2>
    {{#each item.usersList}}
        {{>detailsUser}}
    {{/each}}
</section>
{{/if}}
{{/if}}
{{/if}}